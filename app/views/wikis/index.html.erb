 <h1>All Wikis</h1>
 
 <div class="row">
   <div class="col-md-8">
    <% policy_scope(@wikis).each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <div class="media-heading">
            <%= link_to wiki.title, wiki, class: "index-link" %>
            <%= render 'wikis/privacy', wiki: wiki %> 
            </div> 
        </div>
      </div>   
    <% end %>
  </div>
   <div class="col-md-4">
     <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
   </div>
 </div>    